@using Business.DTO
@{
    ViewData["Title"] = "Giriş";
    Layout = "_LayoutLogin";
}
@model LoginDTO
<div class="sidenav">
    <div class="login-main-text">
        <h2>Öğrenci Yönetim Sistemi<br> Giriş Sayfası</h2>
        <p>Sisteme giriş yapmak için lütfen kimlik bilgilerinizi giriniz.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form asp-controller="Authorize" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>EPosta</label>
                    <input asp-for=Email type="text" class="form-control" placeholder="Mail Adresiniz . . .">
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input asp-for=Password type="password" class="form-control" placeholder="Şifreniz . . .">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for=RememberMe class="form-check-input" type="checkbox" id="flexCheckChecked">
                        <label class="form-check-label" for="flexCheckChecked">
                            Beni Hatırla
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-black">Giriş</button>
            </form>
        </div>
    </div>
</div>